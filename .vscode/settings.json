{
  "editor.defaultColorDecorators": "auto",
  "files.associations": {
    "themeConfig.ts": "typescriptreact" // make color picker visible in this file
  },

  "material-icon-theme.files.customClones": [
    {
      "name": "emotion",
      "base": "react",
      "color": "pink-300",
      "fileExtensions": ["styled.tsx"],
      "fileNames": ["globalStyles.tsx"]
    },
    {
      "name": "react",
      "base": "typescript",
      "color": "blue-500",
      "fileNames": ["themeConfig.ts"]
    },
    {
      "name": "import",
      "base": "json",
      "color": "yellow-900",
      "fileNames": ["example-import.json"]
    },
    {
      "name": "workbox",
      "base": "typescript",
      "color": "orange-400",
      "fileNames": ["workbox.config.ts"]
    },
    {
      "name": "manifest",
      "base": "typescript",
      "color": "purple-400",
      "fileNames": ["manifest.ts"]
    }
  ],

  "material-icon-theme.folders.customClones": [
    {
      "name": "dev-dist",
      "base": "dist",
      "color": "green-800",
      "folderNames": ["dev-dist"]
    },
    {
      "name": "splash-screens",
      "base": "images",
      "color": "purple-300",
      "folderNames": ["splash-screens"]
    },
    {
      "name": "tabs",
      "base": "meta",
      "color": "cyan-900",
      "folderNames": ["tabs"]
    }
  ]
}
